PROGRAM test
    INTEGER G,N,MAT,A
    INTEGER,DIMENSION(:),ALLOCATABLE::ARY_MAT
    OPEN(1,FILE='test',ACTION='read')
    OPEN(2,FILE='output',ACTION='write')
    READ(1,100) MAT
100 FORMAT(I5)
    WRITE(2,200) MAT
    ALLOCATE(ARY_MAT(MAT))
    READ(1,*) (ARY_MAT(i),i=1,MAT)
    WRITE(2,400) (ARY_MAT(i),i=1,MAT)
    WRITE(2,200) ARY_MAT(MAT)+ARY_MAT(1)
200 FORMAT(I5)
400 FORMAT(<MAT>I5)
END
